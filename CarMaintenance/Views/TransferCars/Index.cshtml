@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model IEnumerable<TransferCars>
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> Localizer
@using System.Globalization

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@Localizer["TransferNumberPlateTitle"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">@Localizer["Home"]</a></li>
                    <li class="breadcrumb-item active">@Localizer["TransferCarsTitle"]</li>
                </ol>
            </div>
        </div>
        <hr />
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">
                <a class="btn btn-primary my-3" asp-action="Transfer" asp-controller="TransferCars">
                    @Localizer["TransferNewNumberPlate"]
                </a>
            </h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>@Localizer["ID"]</th>
                        <th>@Localizer["DateLabel"]</th>
                        <th>@Localizer["From"]</th>
                        <th>@Localizer["To"]</th>
                        <th>@Localizer["NumberPlate"]</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.TransferID</th>
                                <td>@item.TransferDate</td>
                                <td>@item.FromCustomers?.Name</td>
                                <td>@item.ToCustomers?.Name</td>
                                <td>@item.Cars?.NumberPlate</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td class="text-center" colspan="5">@Localizer["NoRecordFound"]</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>@Localizer["ID"]</th>
                        <th>@Localizer["Date"]</th>
                        <th>@Localizer["From"]</th>
                        <th>@Localizer["To"]</th>
                        <th>@Localizer["NumberPlate"]</th>
                    </tr>
                </tfoot>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
</section>

@section Scripts {
    <!-- DataTables & Plugins -->
    <script src="~/AdminTheme/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/AdminTheme/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/AdminTheme/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/AdminTheme/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/AdminTheme/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/AdminTheme/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="~/AdminTheme/plugins/jszip/jszip.min.js"></script>
    <script src="~/AdminTheme/plugins/pdfmake/pdfmake.min.js"></script>
    <script src="~/AdminTheme/plugins/pdfmake/vfs_fonts.js"></script>
    <script src="~/AdminTheme/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="~/AdminTheme/plugins/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="~/AdminTheme/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>

    <!-- Page specific script -->
    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"],
                "language": {
                    "url": "/i18n/datatables/@System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName".json"
                }
            }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
        });
    </script>
}
