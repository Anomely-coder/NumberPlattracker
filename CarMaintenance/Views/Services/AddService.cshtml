@model Services
@inject IViewLocalizer Localizer
@using CarMaintenance
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> Localizer

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@Localizer["AddServiceTitle"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">@Localizer["HomeLink"]</a></li>
                    <li class="breadcrumb-item active">@Localizer["ServicesBreadcrumb"]</li>
                </ol>
            </div>
        </div>
        <hr />
    </div>
</section>

<!-- Main content -->
<section class="content">
    <div class="container">
        <form method="post" asp-action="AddService" asp-controller="Services">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div> <!-- Added validation summary -->
            <div class="row my-2">
                <div class="col-md-6 form-group">
                    <label class="form-label" asp-for="ServiceName">@Localizer["ServiceNameLabel"]</label>
                    <input class="form-control" asp-for="ServiceName" />
                    <span class="text-danger" asp-validation-for="ServiceName"></span>
                </div>
                <div class="col-md-6 form-group">
                    <label class="form-label" asp-for="Description">@Localizer["DescriptionLabel"]</label>
                    <input class="form-control" asp-for="Description" />
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
                <div class="col-md-6 form-group">
                    <label class="form-label" asp-for="Price">@Localizer["PriceLabel"]</label>
                    <input class="form-control" asp-for="Price" />
                    <span class="text-danger" asp-validation-for="Price"></span>
                </div>
                <div class="col-md-6 form-group">
                    <label class="form-label" asp-for="ServiceStatus" hidden>@Localizer["ServiceStatusLabel"]</label>
                    <input class="form-control" asp-for="ServiceStatus" value="1" hidden />
                    <span class="text-danger" asp-validation-for="ServiceStatus" hidden></span>
                </div>
                <div class="col-md-12 my-2">
                    <button type="submit" class="btn btn-primary">@Localizer["AddServiceButton"]</button>
                </div>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" /> <!-- Include validation scripts -->
}