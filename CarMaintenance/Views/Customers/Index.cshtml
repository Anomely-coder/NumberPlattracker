@model IEnumerable<Customers>
@inject IViewLocalizer Localizer
@using CarMaintenance
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> Localizer

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@Localizer["CustomersTitle"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">@Localizer["HomeLink"]</a></li>
                    <li class="breadcrumb-item active">@Localizer["CustomersBreadcrumb"]</li>
                </ol>
            </div>
        </div>
        <hr />
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">
                <a class="btn btn-primary my-3" asp-action="AddCustomer" asp-controller="Customers">@Localizer["CreateCustomerButton"]</a>
            </h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>@Localizer["CustomerID"]</th>
                        <th>@Localizer["Name"]</th>
                        <th>@Localizer["Email"]</th>
                        <th>@Localizer["EmiratesID"]</th>
                        <th>@Localizer["NumberPlate"]</th>
                        <th>@Localizer["Edit"]</th>
                        <th>@Localizer["Delete"]</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.CustomerID</th>
                                <td>@item.Name</td>
                                <td>@item.Email</td>
                                <td>@item.EmiratesID</td>
                                <td>@item.Cars?.NumberPlate</td>
                                <td><p><a class="text-primary fas fa-pen" asp-action="EditCustomer" asp-controller="Customers" asp-route-Id="@item.CustomerID"></a></p></td>
                                <td><p><a class="text-danger fas fa-trash" asp-action="DeleteCustomer" asp-controller="Customers" asp-route-Id="@item.CustomerID"></a></p></td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td class="text-center" colspan="7">@Localizer["NoRecordFound"]</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>@Localizer["CustomerID"]</th>
                        <th>@Localizer["Name"]</th>
                        <th>@Localizer["Email"]</th>
                        <th>@Localizer["EmiratesID"]</th>
                        <th>@Localizer["NumberPlate"]</th>
                        <th>@Localizer["Edit"]</th>
                        <th>@Localizer["Delete"]</th>
                    </tr>
                </tfoot>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
</section>
<!-- /.content -->
@section Scripts {
    <!-- DataTables & Plugins -->
    <script src="~/AdminTheme/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/AdminTheme/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/AdminTheme/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/AdminTheme/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/AdminTheme/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/AdminTheme/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="~/AdminTheme/plugins/jszip/jszip.min.js"></script>
    <script src="~/AdminTheme/plugins/pdfmake/pdfmake.min.js"></script>
    <script src="~/AdminTheme/plugins/pdfmake/vfs_fonts.js"></script>
    <script src="~/AdminTheme/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="~/AdminTheme/plugins/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="~/AdminTheme/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>

    <!-- Page specific script -->
    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true,
                "lengthChange": false,
                "autoWidth": false,
                "buttons": [
                    {
                        extend: 'copy',
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4]
                        }
                    },
                    {
                        extend: 'csv',
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4]
                        }
                    },
                    {
                        extend: 'excel',
                        text: '@Localizer["ExcelButton"]',
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4]
                        }
                    },
                    {
                        extend: 'pdf',
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4]
                        }
                    },
                    {
                        extend: 'print',
                        text: '@Localizer["PrintButton"]',
                        title: '',
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4]
                        },
                        customize: function (win) {
                            $(win.document.body).prepend(
                                '<div style="display:flex; justify-content:space-between; margin-bottom:20px;">' +
                                '<h2 style="margin:0;">@Localizer["CustomersReport"]</h2>' +
                                '<img src="/images/logo1.png" style="height:60px;" />' +
                                '</div>'
                            );

                            $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', '12px')
                                .css('width', '100%');
                        }
                    },
                    "colvis"
                ]
            }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
        });
    </script>
}