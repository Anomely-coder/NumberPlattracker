@model IEnumerable<CarMaintenance.Models.PlateAllocation>

<h2>Plate History</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Number Plate</th>
            <th>Owner</th>
            <th>Allocated By</th>
            <th>Allocated At</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var record in Model)
        {
            <tr>
                <td>@record.NumberPlate.PlateNumber</td>
                <td>@record.OwnerName</td>
                <td>@record.AllocatedBy</td>
                <td>@record.AllocatedOn</td>
            </tr>
        }
    </tbody>
</table>
