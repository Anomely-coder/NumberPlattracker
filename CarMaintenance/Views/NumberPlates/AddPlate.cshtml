<!-- Views/NumberPlates/AddPlate.cshtml -->
@model CarMaintenance.Models.NumberPlate

<h2>Add New Number Plate</h2>

<form asp-action="AddPlate" method="post">
    <div class="form-group">
        <label asp-for="PlateNumber" class="control-label"></label>
        <input asp-for="PlateNumber" class="form-control" pattern="[A-Za-z0-9]+" title="Alpha-numeric only" required />
        <span asp-validation-for="PlateNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-danger">@ViewBag.Message</div>
    }
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}